{
  "name": "dna-job-offers-platform-api",
  "version": "1.0.0",
  "description": "Unofficial DNA job offer platform for screaning, tracking, hiring great candidates who apply",
  "main": "app.js",
  "repository": "https://github.com/NiyongaboEric/dna-job-offers-platform-api.git",
  "author": "Eric Niyongabo",
  "license": "MIT",
  "scripts": {
    "start:watch": "nodemon --exec ts-node -e ts,js,json src/server.ts",
    "start": "ts-node src/server.ts",
    "test": "jest",
    "build": "tsc",
    "lint": "tsc --noEmit && eslint {src,test}/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "db:migrate": "yarn ts-node ./node_modules/.bin/sequelize db:migrate",
    "db:migrate:undo": "yarn ts-node --esm  ./node_modules/.bin/sequelize db:migrate:undo",
    "db:seed": "yarn ts-node ./node_modules/.bin/sequelize db:seed:all",
    "db:seed:undo": "yarn ts-node ./node_modules/.bin/sequelize db:seed:undo"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.5.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
